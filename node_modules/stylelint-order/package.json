{
  "name": "stylelint-order",
  "version": "0.7.0",
  "description": "A collection of order related linting rules for stylelint.",
  "keywords": [
    "stylelint-plugin",
    "stylelint",
    "css",
    "lint",
    "order"
  ],
  "author": "Aleks Hudochenkov <aleks@hudochenkov.com>",
  "license": "MIT",
  "repository": "hudochenkov/stylelint-order",
  "bugs": {
    "url": "https://github.com/hudochenkov/stylelint-order/issues"
  },
  "homepage": "https://github.com/hudochenkov/stylelint-order",
  "engines": {
    "node": ">=4"
  },
  "files": [
    "rules",
    "utils",
    "!**/tests",
    "index.js"
  ],
  "main": "index.js",
  "dependencies": {
    "lodash": "^4.17.4",
    "postcss": "^6.0.11",
    "postcss-sorting": "^3.0.2"
  },
  "peerDependencies": {
    "stylelint": "^8.0.0"
  },
  "devDependencies": {
    "eslint": "~4.7.2",
    "eslint-config-hudochenkov": "~2.0.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-prettier": "^2.3.1",
    "husky": "^0.14.3",
    "jest": "^21.1.0",
    "lint-staged": "^4.2.2",
    "prettier": "^1.7.0",
    "stylelint": "^8.1.1"
  },
  "scripts": {
    "precommit": "lint-staged",
    "pretest": "eslint .",
    "test": "jest",
    "jest": "jest",
    "watch": "jest --watch",
    "coverage": "jest --coverage",
    "fix": "npm run pretest -- --fix"
  },
  "lint-staged": {
    "*.js": [
      "npm run fix",
      "git add"
    ]
  },
  "jest": {
    "setupFiles": [
      "./jest-setup.js"
    ],
    "testEnvironment": "node",
    "testRegex": ".*\\.test\\.js$|rules/.*/tests/.*\\.js$"
  }
}
